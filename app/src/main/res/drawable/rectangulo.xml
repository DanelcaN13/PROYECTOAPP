<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Color de fondo al presionar -->
            <stroke android:width="1dp" android:color="#FFFFFF" /> <!-- Borde -->
            <corners android:radius="10dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo -->
            <stroke android:width="1dp" android:color="#000000" /> <!-- Borde -->
            <corners android:radius="10dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
</selector>
